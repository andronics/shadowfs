[flake8]
max-line-length = 100
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    build,
    dist,
    *.egg-info,
    .pytest_cache,
    .mypy_cache
ignore =
    E203,  # whitespace before ':' (conflicts with black)
    W503,  # line break before binary operator (conflicts with black)
per-file-ignores =
    __init__.py:F401